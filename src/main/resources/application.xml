<icegrid>
  <application name="Simple">
    <replica-group id="SimpleServers">
      <load-balancing type="adaptive" />
      <object identity="Hello" type="::Demo::Hello" />
    </replica-group>

    <node name="node1">
      <server id="SimpleServer" exe="runServer.bat" activation="on-demand">
        <adapter name="Hello" endpoints="tcp" />
      </server>
    </node>

    <node name="node2">
      <server id="SimpleServer2" exe="runServer.sh" activation="on-demand">
        <adapter name="Hello" endpoints="tcp" />
      </server>
    </node>
  </application>
</icegrid>