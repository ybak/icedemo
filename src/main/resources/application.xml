<icegrid>
  <application name="Simple">

    <replica-group id="ReplicatedHelloAdapter">
      <load-balancing type="random"/>
      <object identity="hello" type="::Demo::Hello" />
    </replica-group>

    <node name="node1">
      <server id="SimpleServer1" exe="runServer.bat" activation="on-demand">
        <adapter name="Hello" endpoints="tcp" replica-group="ReplicatedHelloAdapter" />
        <property name="Identity" value="hello" />
      </server>
    </node>

    <node name="node2">
      <server id="SimpleServer2" exe="runServer.sh" activation="on-demand">
        <adapter name="Hello" endpoints="tcp" replica-group="ReplicatedHelloAdapter" />
        <property name="Identity" value="hello" />
      </server>
    </node>
  </application>
</icegrid>